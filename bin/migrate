#!/usr/bin/env node

const db = require('../config/database');

db.query('DROP TABLE IF EXISTS sightings');

db.query(`
    CREATE TABLE sightings (
      id INTEGER PRIMARY KEY,
      celebrity VARCHAR(80),
      stalker VARCHAR(80),
      date TIMESTAMP,
      location VARCHAR(80),
      comment VARCHAR(255)
    );
  `).then( response => console.log( 'Migration successful.' ))
    .catch( error => console.error( error.stack ));
